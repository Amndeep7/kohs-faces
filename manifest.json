{
  "manifest_version": 2,
  "author": "Amndeep Singh Mann",
  "name": "Koh's Faces",
  "version": "1.0.2",
  "description": "An /r/anime commentface extender.",

  "applications": {
    "gecko": {
      "id": "kohsfaces@r_anime_commentfaces"
    }
  },

  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "96": "icons/icon_96.png",
    "128": "icons/icon_128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/r/anime/*"],
      "css": ["commentfaces.css"]
    }
  ]
}
